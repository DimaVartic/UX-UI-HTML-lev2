}



.circle-animation .circle {
    width: inherit;
    height: inherit;
    border: 0.2em solid rgb(173, 247, 212);
    position: absolute;
    border-radius: 100%;
    

    animation: wave 10s infinite;
}

.circle-animation .circle:nth-child(2){
    animation-delay: 3.3s;
}

.circle-animation .circle:nth-child(3){
    animation-delay: 6.6s;
}

