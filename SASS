$colorLight:rgb(42, 158, 112);
$colorDark:#333;
$colorText:#333;


body{  
    font-size: 2em;
}

body{

    background-color: $colorDark;
}

#bottom-menu{
   
    position: fixed;
    bottom: 2em;
    right: 2em;

    overflow: hidden;

    &:target + .circle-animation {
        animation: none;
        visibility: hidden;
      }

    &:target a{
        transform: translateY(-0.125em);
    }
}

#bottom-menu a {
    background-color: $colorLight;
    display: block;
    padding: 0.5em;
    margin: 0.2em;
   
    border-radius: 100%;
   box-shadow: inset 0 -1em 1em $colorLight, 0 0 0 2px rgb(173, 247, 212),
    0.3em 0.3em 1em #333;

    color: $colorText;
   
    text-align: center;
    

    transform: translateY( 
        calc(3 * (2* 0.5em + 0.2em + 1em))
        );
    transition: 0.75s;

}


#bottom-menu li:last-child a{
    margin-bottom: 0;
}


